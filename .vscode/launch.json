{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm start",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Run application",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}